<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top_category"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorLucky400" />

    <TextView
        android:id="@+id/tv_sub_category"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorLucky300" />

    <com.zinc.jrecycleview.JRecycleView
        android:id="@+id/j_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorLucky200" />

    <TextView
        android:id="@+id/tv_tab"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorLucky400" />

</LinearLayout>